# Backend Environment Variables
# Copy this file to .env and replace placeholders with actual values

PORT=5000
NODE_ENV=development

# MongoDB Atlas connection string
# Replace <username>, <password>, and <cluster> with your actual MongoDB Atlas credentials
MONGO_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/skillswap?retryWrites=true&w=majority

# JWT Secret - Generate a secure random string (e.g., using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
JWT_SECRET=your_jwt_secret_placeholder_replace_with_secure_random_string

# CORS Origin (frontend URL)
CORS_ORIGIN=http://localhost:5173
